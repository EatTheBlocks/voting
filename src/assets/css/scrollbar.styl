body
  //overflow-y scroll

::-webkit-scrollbar
  width 12px

::-webkit-scrollbar-track
  background #333333
  padding 2px

::-webkit-scrollbar-thumb
  background #5b5b5b
  border-radius 10px
  background-clip padding-box
  border 3px solid rgba(0, 0, 0, 0)

::-webkit-scrollbar-thumb:hover
  background #515151
  background-clip padding-box
  border 3px solid rgba(0, 0, 0, 0)
